{% extends 'base.html.twig' %}

{% block title %}Equipe index
{% endblock %}

{% block body %}
	<h1>Les Équipes</h1>
	<div id="blocTable" class="table-responsive-sm">
		<table class="table table-striped table-dark">
			<thead>
				<tr>
					<th>Id</th>
					<th>NomEquipe</th>
					<th>LeaderEquipe</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for equipe in equipes %}
					<tr>
						<td>{{ equipe.id }}</td>
						<td>{{ equipe.NomEquipe }}</td>
						<td>{{ equipe.LeaderEquipe }}</td>
						<td>
							<a href="{{ path('app_equipe_show', {'id': equipe.id}) }}">
								<button id="bton2" class="bton">Voir</button>
							</a>
							<a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">
								<button id="bton2" class="bton">Modifier</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>

		</table>
		<button class="bton">
			<a href="{{ path('app_equipe_new') }}">Créer une équipe</a>
		</button>
	</div>

{% endblock %}
