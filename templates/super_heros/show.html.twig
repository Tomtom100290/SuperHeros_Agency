{% extends 'base.html.twig' %}

{% block title %}SuperHeros
{% endblock %}

{% block body %}
	<h1>SuperHeros</h1>
	<div id="blocTable" class="table-responsive-sm">
		<table class="table table-striped table-dark">
			<tbody>
				<div class="ShowSH">
					<div class="ImageImport" id="badge"><img src="{{ asset('images/heros/' ~ super_hero.imageName) }}" alt="{{ super_hero.Nom }}"></div>

					<h2>{{ super_hero.Nom }}</h2>
				</div>
				<tr>
					<th>Id</th>
					<td>{{ super_hero.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ super_hero.Nom }}</td>
				</tr>
				<tr>
					<th>AlterEgo</th>
					<td>{{ super_hero.AlterEgo }}</td>
				</tr>
				<tr>
					<th>Disponible</th>
					<td>{{ super_hero.Disponible ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Energie</th>
					<td>{{ super_hero.Energie }}</td>
				</tr>
				<tr>
					<th>Biographie</th>
					<td>{{ super_hero.Biographie }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ super_hero.createdAt ? super_hero.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<button class="bton">
		<a href="{{ path('app_super_heros_index') }}">Retour</a>
	</button>

	<button class="bton">
		<a href="{{ path('app_super_heros_edit', {'id': super_hero.id}) }}">Edit</a>
	</button>

	{{ include('super_heros/_delete_form.html.twig') }}
{% endblock %}
